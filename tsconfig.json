{
    "compilerOptions": {
      "target": "es5",
      "baseUrl": "./src",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "typeRoots": [
          "./src/types",
          "./node_modules/@types"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react",
      "experimentalDecorators": true
    },
    "include": [
      "src"
    ]
  }
  